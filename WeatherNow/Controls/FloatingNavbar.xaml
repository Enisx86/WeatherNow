<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherNow.Controls.FloatingNavbar">

    <!--
        EXAMPLE USAGE IN PAGE:
        xmlns:Controls="clr-namespace:WeatherNow.Controls"
    
        <Grid>
            <ScrollView>
                ...
            </ScrollView>
            <Controls:FloatingNavbar />
        </Grid>
    -->
    
    <Border VerticalOptions="End" HorizontalOptions="Fill"
            Margin="20, 0, 20, 40"
            StrokeShape="RoundRectangle 32" BackgroundColor="White">

        <Border.Shadow>
            <Shadow Brush="Black" Offset="0,8" Radius="15" Opacity="0.3" />
        </Border.Shadow>

        <Grid ColumnDefinitions="*,*,*">
            <ImageButton x:Name="HomeButton" Grid.Column="0" 
                         Source="pcloudy.png" HeightRequest="48"
                         Clicked="Home_Clicked" />
            <ImageButton x:Name="SearchButton" Grid.Column="1" 
                         Source="location_pin.png" HeightRequest="48" 
                         Clicked="Search_Clicked" />
            <ImageButton x:Name="FavoritesButton" Grid.Column="2" 
                         Source="favorite_fill.png" HeightRequest="48" 
                         Clicked="Favorites_Clicked" />
        </Grid>
    </Border>
</ContentView>
